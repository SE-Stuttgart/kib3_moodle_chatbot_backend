template inform(moduleName, repeatContent)
    if repeatContent = "quiz":
        "Du hast das Module {moduleName} seit langen Zeit abgeschlossen. {REPEAT_QUIZ()}"
    if repeatContent = "module":
        "Du hast bei {moduleName} weniger als 50% der Quiz richtig beantwortet :-(. Es wäre besser, wenn du das Modul wiederholst, dann wirst du bestimmt ein besseres Ergibniss erreichen!"
    if repeatContent = "oldcontent":
        "Du hast {moduleName} seit zwei Wochen nicht mehr geöffnet. Du solltest die Inhalte nochmal auffrischen, ansonsten vergiss du sie!"
    if repeatContent = "noContent":
        "Es gibt keine Inhalte, die du wiederholen solltest. Du könntest mit einem neuen Modul anfangen!"

template request(quiz_link, module, insufficient)
